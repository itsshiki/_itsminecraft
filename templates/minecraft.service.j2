[Unit]
Description=Minecraft Server (PaperMC)

[Service]
Type=simple
User=minecraft
Group=minecraft
TimeoutStartSec=0
WorkingDirectory=/opt/minecraft
ExecStart=/bin/sh -c "/usr/bin/java {{ minecraft_java_args }} -jar /opt/minecraft/paper.jar nogui </run/minecraft.control"
ExecStop=/bin/sh -c "/usr/bin/echo stop > /run/minecraft.control"
Restart=on-failure
RestartSec=5min
Sockets=minecraft.socket
KillSignal=SIGCONT
StandardInput=socket
StandardOutput=journal
StandardError=journal
SuccessExitStatus=143

[Install]
WantedBy=multi-user.target
